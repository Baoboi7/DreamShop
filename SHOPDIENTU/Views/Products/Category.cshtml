@model List<SHOPDIENTU.Models.Product>
@{
    ViewData["Title"] = "Danh mục sản phẩm";
}

<style>
    .filter-bar {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #fff;
        padding: 15px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        gap: 15px;
        border-radius: 10px;
        width: 90%;
        margin: 20px auto;
    }

        .filter-bar select, .filter-bar button {
            padding: 6px 10px;
            border-radius: 6px;
            border: 1px solid #ccc;
            font-size: 14px;
            cursor: pointer;
        }

        .filter-bar button {
            background: #d70018;
            color: white;
            border: none;
        }

            .filter-bar button:hover {
                background: #b00015;
            }

    .product-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        padding: 30px;
    }

    .product-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 25px;
        padding: 30px;
    }

    .product-card {
        background: #fff;
        border-radius: 10px;
        width: 250px; 
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        text-align: center;
        transition: all 0.3s;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 360px; 
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 12px rgba(0,0,0,0.15);
        }

        .product-card img {
            width: 100%;
            height: 180px;
            object-fit: contain; 
            padding: 10px;
        }

        .product-card h3 {
            font-size: 15px;
            color: #222;
            font-weight: 600;
            margin: 5px 10px;
            line-height: 1.3em;
            height: 40px; 
            overflow: hidden;
        }

    .price {
        color: #d70018;
        font-weight: bold;
        font-size: 16px;
        margin-bottom: 8px;
    }

    .btn-detail {
        background: #d70018;
        color: white;
        border-radius: 6px;
        padding: 6px 10px;
        text-decoration: none;
        font-size: 13px;
        margin-bottom: 10px;
        display: inline-block;
        transition: background 0.2s;
    }

        .btn-detail:hover {
            background: #b00015;
        }

</style>

<h2 style="text-align:center;margin-top:25px;">
    Danh mục: @Context.Request.Query["category"]
</h2>

<div class="filter-bar">
    <form method="get" asp-controller="Products" asp-action="Category">
        <input type="hidden" name="category" value="@Context.Request.Query["category"]" />

        <select name="brand">
            <option value="">-- Chọn hãng --</option>
            @if (ViewBag.Brands != null)
            {
                foreach (var brand in ViewBag.Brands)
                {
                    <option value="@brand">@brand</option>
                }
            }
        </select>

        <select name="priceRange">
            <option value="">-- Chọn mức giá --</option>
            <option value="duoi-10tr">Dưới 10 triệu</option>
            <option value="10-20tr">10 - 20 triệu</option>
            <option value="tren-20tr">Trên 20 triệu</option>
        </select>

        <button type="submit">Lọc</button>
    </form>
</div>

<div class="product-grid">
    @if (Model.Count == 0)
    {
        <p>Không có sản phẩm nào trong danh mục này.</p>
    }
    else
    {
        foreach (var p in Model)
        {
            <div class="product-card">
                <img src="@p.Image" alt="@p.Name" />
                <h3>@p.Name</h3>
                <span class="price">@String.Format("{0:N0} ₫", p.Price)</span>
                <a class="btn-detail" href="@Url.Action("Details", "Products", new { id = p.Id })">Xem chi tiết</a>
            </div>
        }
    }
</div>
