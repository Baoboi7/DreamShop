@model SHOPDIENTU.Models.Product
@{
    ViewData["Title"] = @Model.Name;
}

<style>
    .product-details-page {
        width: 90%;
        margin: 40px auto;
        font-family: 'Roboto', sans-serif;
    }

    .product-top {
        display: flex;
        gap: 50px;
        background: #fff;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    /* Ảnh sản phẩm */
    .product-images {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .main-image {
        width: 400px;
        height: 400px;
        border-radius: 10px;
        object-fit: contain;
        border: 1px solid #eee;
        background-color: #fafafa;
        transition: transform 0.3s ease;
    }

        .main-image:hover {
            transform: scale(1.05);
        }

    /* Thông tin sản phẩm */
    .product-info {
        flex: 1.2;
        padding-left: 40px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .price {
        font-size: 26px;
        color: #d70018;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .brand {
        font-size: 16px;
        color: #555;
        margin-bottom: 20px;
    }

    .btn-buy {
        background: #d70018;
        color: white;
        padding: 12px 25px;
        border-radius: 6px;
        border: none;
        font-size: 18px;
        cursor: pointer;
        transition: all 0.2s;
        width: fit-content;
        margin-top: 10px;
        text-decoration: none;
    }

        .btn-buy:hover {
            background: #b00015;
        }

    /* Mô tả chi tiết */
    .product-description {
        background: #fff;
        margin-top: 30px;
        padding: 25px;
        border-radius: 15px;
        box-shadow: 0 3px 8px rgba(0,0,0,0.1);
    }

        .product-description h3 {
            font-size: 20px;
            color: #d70018;
            margin-bottom: 15px;
        }

        .product-description p {
            color: #444;
            line-height: 1.6;
        }

   
    .related-products {
        margin-top: 40px;
    }

        .related-products h3 {
            color: #d70018;
            margin-bottom: 15px;
        }

    .related-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .related-item {
        background: #fff;
        width: 220px;
        border-radius: 10px;
        text-align: center;
        padding: 10px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        transition: transform 0.2s ease;
    }

        .related-item:hover {
            transform: translateY(-5px);
        }

        .related-item img {
            width: 100%;
            height: 150px;
            object-fit: contain;
        }

        .related-item h4 {
            font-size: 15px;
            margin-top: 10px;
            height: 38px;
            overflow: hidden;
        }

        .related-item p {
            color: #d70018;
            font-weight: bold;
            margin: 5px 0;
        }

        .related-item a {
            text-decoration: none;
            color: white;
            background: #d70018;
            padding: 5px 10px;
            border-radius: 5px;
            display: inline-block;
        }

            .related-item a:hover {
                background: #b00015;
            }
</style>

<div class="product-details-page">
    <div class="product-top">
        <!-- Ảnh sản phẩm chính -->
        <div class="product-images">
            <img src="@Model.Image" alt="@Model.Name" class="main-image" />
        </div>

        <!-- Thông tin sản phẩm -->
        <div class="product-info">
            <h1>@Model.Name</h1>
            <span class="price">@String.Format("{0:N0} ₫", Model.Price)</span>
            <p class="brand"><strong>Hãng:</strong> @Model.Brand</p>
            <p><strong>Danh mục:</strong> @Model.Category</p>
            <p><strong>Tình trạng:</strong> Còn hàng ✅</p>
            <p><strong>Bảo hành:</strong> 12 tháng chính hãng</p>

            @* Chỉ hiển thị Card đồ họa nếu là Laptop *@
            @if (Model.Category != null && Model.Category.ToLower().Contains("laptop"))
            {
                <p><strong>Card đồ họa:</strong> NVIDIA® GeForce RTX™ 4060 8GB GDDR6</p>
            }

            <a href="@Url.Action("AddToCart", "Cart", new { id = Model.Id })" class="btn-buy">🛒 Thêm vào giỏ hàng</a>
        </div>
    </div>

    <!-- Mô tả sản phẩm -->
    <div class="product-description">
        <h3>Chi tiết sản phẩm</h3>
        <div class="product-desc-content">
            @Html.Raw(Model.Description?.Replace("\n", "<br>"))
        </div>
    </div>

    <!-- Sản phẩm liên quan -->
    @{
        var relatedProducts = ViewBag.Related as List<SHOPDIENTU.Models.Product>;
    }

    @if (relatedProducts != null && relatedProducts.Any())
    {
        <div class="related-products">
            <h3>Sản phẩm cùng danh mục</h3>
            <div class="related-grid">
                @foreach (var item in relatedProducts.Take(4))
                {
                    <div class="related-item">
                        <img src="@item.Image" alt="@item.Name" />
                        <h4>@item.Name</h4>
                        <p>@String.Format("{0:N0} ₫", item.Price)</p>
                        <a href="@Url.Action("Details", "Products", new { id = item.Id })">Xem chi tiết</a>
                    </div>
                }
            </div>
        </div>
    }
</div>
