@model List<SHOPDIENTU.Models.Product>
@{
    ViewData["Title"] = "DreamShop";
}

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f9f9f9;
        margin: 0;
    }

    .category-bar {
        background: linear-gradient(180deg, #fff 0%, #ffe4e8 100%);
        border-top: 1px solid #eee;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        padding: 14px 0;
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 12px;
        border-radius: 12px;
        margin: 0 auto 20px auto;
        width: 90%;
    }


        
        .category-bar button {
            border: 1.5px solid #d70018;
            background: #fff;
            color: #d70018;
            padding: 7px 16px;
            border-radius: 30px; 
            font-weight: 500;
            cursor: pointer;
            transition: all 0.25s ease;
            box-shadow: 0 2px 5px rgba(215, 0, 24, 0.05);
        }

            .category-bar button:hover {
                background: #d70018;
                color: #fff;
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(215, 0, 24, 0.25);
            }


    
    .product-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        padding: 20px;
    }

    a {
        text-decoration: none;
        color: inherit;
    }

    .product-card {
        background-color: #fff;
        border-radius: 10px;
        width: 230px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        overflow: hidden;
        transition: transform 0.2s ease, box-shadow 0.3s ease;
        position: relative;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

    .discount-tag {
        position: absolute;
        top: 10px;
        left: 10px;
        background-color: #d70018;
        color: white;
        font-size: 12px;
        padding: 3px 8px;
        border-radius: 3px;
        font-weight: bold;
    }

    .product-card img {
        width: 100%;
        height: 180px;
        object-fit: contain;
        padding: 10px;
    }

    .product-info {
        text-align: center;
        padding: 10px;
    }

        .product-info h3 {
            font-size: 15px;
            color: #333;
            height: 40px;
            overflow: hidden;
        }

    .price {
        color: #d70018;
        font-weight: bold;
        font-size: 16px;
    }

    .btn-view {
        display: inline-block;
        background: #d70018;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 13px;
        transition: all 0.2s ease;
        margin-top: 8px;
    }

        .btn-view:hover {
            background: #b00015;
        }

    
    .footer {
        background-color: #222;
        color: #aaa;
        text-align: center;
        padding: 20px;
        font-size: 14px;
        margin-top: 30px;
    }
</style>


<div class="category-bar">
    @foreach (var cat in ViewBag.Categories as List<string>)
    {
        <button onclick="location.href='@Url.Action("Category", "Products", new { category = cat })'">@cat</button>
    }
</div>

<div class="product-grid">
    @foreach (var p in Model)
    {
        <a href="@Url.Action("Details", "Products", new { id = p.Id })">
            <div class="product-card">
                @if (p.Discount > 0)
                {
                    <div class="discount-tag">Giảm @p.Discount%</div>
                }

                <img src="@p.Image" alt="@p.Name" />
                <div class="product-info">
                    <h3>@p.Name</h3>
                    <span class="price">@String.Format("{0:N0} ₫", p.Price)</span>
                    <div>
                        <span class="btn-view">Xem chi tiết</span>
                    </div>
                </div>
            </div>
        </a>
    }
</div>
