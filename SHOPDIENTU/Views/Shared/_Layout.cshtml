<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DreamShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            font-family: 'Roboto', sans-serif;
            background-color: #f9f9f9;
        }

        .main-content {
            flex: 1;
        }

        header {
            background: linear-gradient(180deg, #ffd6dc 0%, #ffb6c1 100%);
            color: #fff;
            padding: 8px 0;
            box-shadow: 0 4px 10px rgba(255, 182, 193, 0.6);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .logo {
            font-size: 22px;
            font-weight: 700;
            color: #ff2e74;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .logo:hover {
                color: #ff007f;
                text-shadow: 0 0 8px rgba(255, 105, 180, 0.8);
            }

        .search-form input {
            width: 100%;
            border-radius: 25px;
            border: 1px solid #fff;
            padding: 9px 15px;
            font-size: 15px;
            box-shadow: 0 3px 6px rgba(255, 182, 193, 0.5);
            transition: all 0.25s ease-in-out;
        }

            .search-form input:focus {
                border-color: #fff;
                box-shadow: 0 4px 8px rgba(255, 192, 203, 0.8);
            }

        header .btn {
            border-radius: 12px;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 2px 5px rgba(255, 182, 193, 0.4);
        }

        header .btn-light {
            background: white;
            color: #ff2e74;
            border: 1px solid #ffc6d0;
        }

            header .btn-light:hover {
                background: #ff4d84;
                color: white;
                border-color: #ff4d84;
                transform: scale(1.05);
            }

        header .btn-outline-danger {
            color: #ff2e74;
            border-color: #ff2e74;
            background: white;
        }

            header .btn-outline-danger:hover {
                background: #ff2e74;
                color: white;
                transform: scale(1.05);
            }

        .banner-container {
            width: 100%;
            display: flex;
            justify-content: center;
            background: transparent;
            margin: 20px 0;
        }

        .banner-slide {
            position: relative;
            width: 1200px;
            height: 350px;
            overflow: hidden;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        }

            .banner-slide img {
                position: absolute;
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: opacity 1s ease-in-out;
                opacity: 0;
            }

                .banner-slide img.active {
                    opacity: 1;
                }

        @@media (max-width: 768px) {
            .search-form {
                margin: 10px 0;
            }

            .banner-slide {
                width: 100%;
                height: 250px;
                border-radius: 0;
            }
        }
    </style>
</head>

<body>
    <header class="shadow-sm py-2">
        <div class="container d-flex align-items-center justify-content-between" style="max-width:1200px;">
            <a asp-controller="Home" asp-action="Index" class="logo fw-bold">DreamShop</a>

            <form asp-controller="Products" asp-action="Search" method="get"
                  class="search-form flex-grow-1 mx-4" style="max-width:400px;">
                <input type="text" name="keyword" class="form-control"
                       placeholder="Bạn muốn mua gì hôm nay?" />
            </form>

            <div class="d-flex align-items-center gap-2">
                <a class="btn btn-light px-3 fw-semibold" asp-controller="Cart" asp-action="Index">🛒 Giỏ hàng</a>

                @if (Context.Session.GetString("User") == null)
                {
                    <a class="btn btn-outline-danger px-3 fw-semibold" data-bs-toggle="modal" data-bs-target="#loginModal">👤 Tài khoản</a>
                }
                else
                {
                    <div class="dropdown">
                        <button class="btn btn-danger dropdown-toggle text-white px-3 fw-semibold"
                                type="button" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                            👤 @Context.Session.GetString("User")
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Đăng xuất</a></li>
                        </ul>
                    </div>
                }
            </div>
        </div>
    </header>

    @{
        var controller = ViewContext.RouteData.Values["controller"]?.ToString();
        var action = ViewContext.RouteData.Values["action"]?.ToString();
    }

    @if ((controller == "Home" && action == "Index") ||
        (controller == "Products" && action == "Index") ||
        (controller == "Products" && action == "Category"))
    {
        <div class="banner-container">
            <div class="banner-slide">
                <img src="/Banner/banne1.jpg" class="active" />
                <img src="/Banner/banne2.jpg" />
                <img src="/Banner/banne3.jpg" />
            </div>
        </div>
    }

    <main role="main" class="main-content pb-3">
        @RenderBody()
    </main>

    <footer style="background: linear-gradient(180deg, #FFC4D0 0%, #FF8FA8 100%); padding:40px 0; font-size:14px; color:#333;">
        <div class="container">
            <div class="row">

                <div class="col-md-3 mb-4">
                    <h5 class="fw-bold mb-3">VỀ DREAMSHOP</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-dark text-decoration-none">Giới thiệu</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">Tuyển dụng</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">Liên hệ</a></li>
                    </ul>
                </div>

                <div class="col-md-3 mb-4">
                    <h5 class="fw-bold mb-3">CHÍNH SÁCH</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-dark text-decoration-none">Chính sách bảo hành</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">Chính sách giao hàng</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">Chính sách bảo mật</a></li>
                    </ul>
                </div>

                <div class="col-md-3 mb-4">
                    <h5 class="fw-bold mb-3">THÔNG TIN</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-dark text-decoration-none">Hệ thống cửa hàng</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">Hướng dẫn mua hàng</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">Hướng dẫn thanh toán</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">Hướng dẫn trả góp</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">Tra cứu địa chỉ bảo hành</a></li>
                        <li><a href="#" class="text-dark text-decoration-none">Build PC</a></li>
                    </ul>
                </div>

                <div class="col-md-3 mb-4">
                    <h5 class="fw-bold mb-3">TỔNG ĐÀI HỖ TRỢ (8:00 - 21:00)</h5>
                    <p class="m-0">Mua hàng: <b>1900.0001</b></p>
                    <p class="m-0">Bảo hành: <b>1900.0002</b></p>
                    <p class="m-0">Khiếu nại: <b>1800.0003</b></p>
                    <p>Email: support@dreamshop.com</p>
                </div>

            </div>

            <div class="text-center mb-3">
                <h6 class="fw-bold">KẾT NỐI VỚI CHÚNG TÔI</h6>
                <img src="/img/fbo.png" width="32" class="mx-2" />
                <img src="/img/tiktok.png" width="32" class="mx-2" />
                <img src="/img/youtube.png" width="32" class="mx-2" />
                <img src="/img/zalo.png" width="32" class="mx-2" />
            </div>

            <div class="text-center">
                © 2025 DreamShop — Thiết kế bởi <strong>Bảo Gia</strong>
            </div>

        </div>
    </footer>

    <script>
        const slides = document.querySelectorAll('.banner-slide img');
        let currentIndex = 0;

        if (slides.length > 0) {
            setInterval(() => {
                slides[currentIndex].classList.remove('active');
                currentIndex = (currentIndex + 1) % slides.length;
                slides[currentIndex].classList.add('active');
            }, 4000);
        }
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
